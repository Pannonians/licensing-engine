generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// ðŸ‘‡ add the tables model here

model License {
  id            String          @id @default(cuid())
  name          String          @db.VarChar(240)
  description   String          @db.Text
  DomainLicense DomainLicense[]
  LicenseToken  LicenseToken[]
}

model Domain {
  id            String          @id @default(cuid())
  name          String          @db.Char(100)
  active        Boolean         @default(false)
  DomainLicense DomainLicense[]
}

model DomainLicense {
  id        String  @id @default(cuid())
  domains   Domain  @relation(fields: [domainId], references: [id])
  licences  License @relation(fields: [licenceId], references: [id])
  domainId  String
  licenceId String
}

model LicenseToken {
  id        String  @id @default(cuid())
  licenses  License @relation(fields: [licenceId], references: [id])
  licenceId String
  Token     Token[]
}

model Token {
  id             String       @id @default(cuid())
  token          String       @db.Char(64)
  active         Boolean      @default(false)
  licenceTokens  LicenseToken @relation(fields: [licenceTokenId], references: [id])
  licenceTokenId String
  App            App?         @relation(fields: [appId], references: [id])
  appId          String?
}

model App {
  id          String  @id @unique
  name        String  @db.Char(100)
  active      Boolean @default(false)
  description String  @db.Text
  tokens      Token[]
}