generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// ðŸ‘‡ add the tables model here

model License {
  id             String          @id @default(cuid())
  name           String          @db.VarChar(240)
  description    String          @db.LongText
  DomainLicenses DomainLicense[]
  LicenseTokens  LicenseToken[]

  @@unique([name])
}

model Domain {
  id             String          @id @default(cuid())
  name           String          @db.Char(100)
  active         Boolean         @default(false)
  DomainLicenses DomainLicense[]

  @@unique([name])
}

model DomainLicense {
  id        String  @id @default(cuid())
  domain    Domain  @relation(fields: [domainId], references: [id], onDelete: Cascade)
  license   License @relation(fields: [licenseId], references: [id], onDelete: Cascade)
  domainId  String
  licenseId String

  @@unique([licenseId, domainId])
}

model LicenseToken {
  id        String  @id @default(cuid())
  license   License @relation(fields: [licenseId], references: [id], onDelete: Cascade)
  token     Token   @relation(fields: [tokenId], references: [id], onDelete: Cascade)
  licenseId String
  tokenId   String

  @@unique([licenseId, tokenId])
}

model Token {
  id            String         @id @default(cuid())
  token         String         @db.Char(64)
  active        Boolean        @default(false)
  App           App?           @relation(fields: [appId], references: [id])
  appId         String?
  LicenseTokens LicenseToken[]
}

model App {
  id          String  @id @default(cuid())
  name        String  @db.Char(100)
  active      Boolean @default(false)
  description String  @db.LongText
  tokens      Token[]
}
